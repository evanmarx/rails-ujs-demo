<h1>Comments</h1>

<%= form_for(Comment.new, remote: true, html: {id: "comment-form"}) do |f| %>
  <div class="field">
    <%= f.label :text, "Write a new comment..." %><br>
    <%= f.text_area :text %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<section class="comments">
<%= render @comments %>
</section>

<script>

$(document).ready(function(){
  
  $("#comment-form").on("ajax:success", function(event, data){
    $(".comments").prepend($data);
  });
  
});


</script>